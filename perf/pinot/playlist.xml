<playlist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../TKG/playlist.xsd">
	<include>run/testenv.mk</include>

	<!-- Define the variable for the Pinot path -->
	<property name="PINOT_PATH" value="$(TEST_RESROOT)/pinot/apache-pinot-0.12.1-src/pinot-perf/target/pinot-perf-pkg"/>

	<test>
		<testCaseName>pinot-BenchmarkStringDictionary</testCaseName>
		<command>
			export JAVA_OPTS=$(JVM_OPTIONS); cd $(Q)$(PINOT_PATH)/bin$(Q); bash $(Q)$(PINOT_PATH)/bin/pinot-BenchmarkStringDictionary.sh$(Q); \
			$(TEST_STATUS)
		</command>
		<levels>
			<level>dev</level>
		</levels>
		<groups>
			<group>perf</group>
		</groups>
		<vendors>
			<vendor>microsoft</vendor>
		</vendors>
	</test>
